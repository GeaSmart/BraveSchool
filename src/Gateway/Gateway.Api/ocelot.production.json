    },
    //-----------------------------------------------
    {
      "DownstreamPathTemplate": "/users",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "bs-api-identity.azurewebsites.net",
          "Port": 443
        }
      ],
      "UpstreamPathTemplate": "/users",
      "UpstreamhttpsMethod": [ "Get" ]
